<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.EdamamApp" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Background and text colors -->
        <item name="android:background">@color/main_screen_content_background</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:editTextColor">@color/text_color_primary</item>
        <!-- ActionBar title text color -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">@color/text_color_primary</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
</resources>